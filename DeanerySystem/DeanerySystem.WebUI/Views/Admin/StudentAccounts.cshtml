
@{
    ViewData["Title"] = "Студенти";
}
<script>
    this.data = @Html.Raw(@ViewData["Data"]);
</script>
<div class="page-bar" data-bind="with: PageBar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Home")"> Головна </a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span> Студенти </span>
        </li>
    </ul>
</div>
<h3 class="page-title">Студенти <small>Список студентів університету</small></h3>
<div class="portlet light portlet-fit bordered" id="accountsPage">
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div>
                        <button id="sample_editable_1_new" class="btn green">
                            Додати новий
                            <i class="fa fa-plus"></i>
                        </button>
                        <button class="btn blue" onclick="location.href='@Url.Action("Import", "Admin")';">
                                Імпорт
                                <i class="fa fa-file-excel-o"></i>                          
                        </button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div id ="actions" class="btn-group pull-right">
                    </div>
                </div>
            </div>
        </div>
        <div id="sample_editable_1_wrapper" class="dataTables_wrapper no-footer">
            <div>
                <table class="table table-striped table-hover table-bordered dataTable no-footer" id="sample_editable_1" role="grid" aria-describedby="sample_editable_1_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1" aria-sort="ascending" aria-label=" Username : activate to sort column descending"> № студ. квитка </th>
                            <th class="sorting_asc" tabindex="0" aria-controls="sample_editable_1"> Прізвище </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Ім'я </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> По батькові </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> First Name </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Last Name </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Email </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Телефон </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Дата нар. </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Потік </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Група </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Редагувати </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Видалити </th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: {data: Accounts}">
                        <tr role="row" class="odd">
                            <td data-bind="text: StudentCardId, attr: {'data-id': Id}"> </td>
                            <td class="sorting_1" data-bind="text: LastName"></td>
                            <td data-bind="text: FirstName"></td>
                            <td data-bind="text: MiddleName"></td>
                            <td data-bind="text: FirstNameEng"></td>
                            <td data-bind="text: LastNameEng"></td>
                            <td data-bind="text: Email"></td>
                            <td data-bind="text: PhoneNumber"></td>
                            <td data-bind="text: BirthDate"></td>
                            <td data-bind="text: Stream"></td>
                            <td data-bind="text: Group"></td>
                            <td>
                                <a class="edit" href="javascript:;"> Редагувати </a>
                            </td>
                            <td>
                                <a class="delete" href="javascript:;"> Видалити </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/theme/assets/global/plugins/datatables/datatables.min.js"></script>
<script src="~/theme/assets/global/plugins/datatables/datatables.all.min.js"></script>
<script src="~/Theme/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js"></script>
<link href="~/Theme/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" />
<script src="~/dist/accounts.js"></script>


