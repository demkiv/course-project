<body class=" login">
	<!-- BEGIN : LOGIN PAGE 5-1 -->
	<div class="user-login-5">
		<div class="row bs-reset">
			<div class="col-md-6 bs-reset mt-login-5-bsfix">
				<div class="login-image"></div>
			</div>
			<div class="col-md-6 login-container bs-reset mt-login-5-bsfix">
				<div class="login-content">
					<h1> Вхід </h1>
					<p> Львівський національний університет імені Івана Франка </p>
					<form class="login-form" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
						<div class="alert alert-danger display-hide">
							<button class="close" data-close="alert"></button>
							<span> Enter any username and password. </span>
							<div asp-validation-summary="All" class="text-danger"></div>
						</div>
						<div class="row">
							<div class="col-xs-6">
								<input asp-for="Email" class="form-control form-control-solid placeholder-no-fix form-group" type="email" autocomplete="off" placeholder="Емейл" name="email" required />
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>
							<div class="col-xs-6">
								<input asp-for="Password" class="form-control form-control-solid placeholder-no-fix form-group" type="password" autocomplete="off" placeholder="Пароль" name="password" required />
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-5">
								<div class="rem-password">
									<label class="rememberme mt-checkbox mt-checkbox-outline">
										<input asp-for="RememberMe" type="checkbox" name="remember" value="1" /> Запам'ятати мене
										<span></span>
									</label>
								</div>
							</div>
							<div class="col-sm-7 text-right">
								<div class="forgot-password">
									<a href="javascript:;" id="forget-password" class="forget-password">Забули пароль?</a>
								</div>
								<button class="btn green" type="submit"> Ввійти </button>
							</div>
						</div>
					</form>
					<!-- BEGIN FORGOT PASSWORD FORM -->
					<form class="forget-form" action="javascript:;" method="post">
						<h3 class="font-green">Forgot Password ?</h3>
						<p> Enter your e-mail address below to reset your password. </p>
						<div class="form-group">
							<input class="form-control placeholder-no-fix form-group" type="text" autocomplete="off" placeholder="Email" name="email" />
						</div>
						<div class="form-actions">
							<button type="button" id="back-btn" class="btn green btn-outline">Back</button>
							<button type="submit" class="btn btn-success uppercase pull-right">Submit</button>
						</div>
					</form>
					<!-- END FORGOT PASSWORD FORM -->
				</div>
				<div class="login-footer">
					<div class="login-copyright text-right">
						<p> 2018 &copy; Electronic Deanery by Solomiia Demkiv & Markiyan Fostyak </p>
					</div>
				</div>
			</div>
		</div>
	</div>
