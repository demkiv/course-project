
@{
    ViewData["Title"] = "Студенти";
}
<script>
    this.data = @Html.Raw(@ViewData["Data"]);
</script>
<h2>Студенти</h2>
<div class="portlet light portlet-fit bordered" id="accountsPage">
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <button id="sample_editable_1_new" class="btn green">
                            Додати новий
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="btn-group pull-right">
                        <button class="btn green btn-outline dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            Інструменти
                            <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="javascript:;"> Друк </a>
                            </li>
                            <li>
                                <a href="javascript:;"> Зберегти як PDF </a>
                            </li>
                            <li>
                                <a href="javascript:;"> Експорт в Excel </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div id="sample_editable_1_wrapper" class="dataTables_wrapper no-footer">
            <div>
                <table class="table table-striped table-hover table-bordered dataTable no-footer" id="sample_editable_1" role="grid" aria-describedby="sample_editable_1_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="sample_editable_1" aria-sort="ascending" aria-label=" Username : activate to sort column descending"> № студ. квитка </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Прізвище </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Ім'я </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> По батькові </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> First Name </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Last Name </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Email </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Телефон </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Дата нар. </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Потік </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Група </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Редагувати </th>
                            <th class="sorting" tabindex="0" aria-controls="sample_editable_1"> Видалити </th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: {data: Accounts, afterRender: DrawTable}">
                        <tr role="row" class="odd">
                            <td class="sorting_1" data-bind="text: StudentCardId"> ВК 32541000 </td>
                            <td data-bind="text: LastName">Глова</td>
                            <td data-bind="text: FirstName">Андрій</td>
                            <td data-bind="text: MiddleName">Романович</td>
                            <td data-bind="text: FirstNameEng">FirstNameEng</td>
                            <td data-bind="text: LastNameEng">Hlova</td>
                            <td data-bind="text: Email">a.hlova@gmail.com</td>
                            <td data-bind="text: PhoneNumber">06391239856</td>
                            <td data-bind="text: BirthDate">09/04/1995</td>
                            <td data-bind="text: Stream">ПМІ</td>
                            <td data-bind="text: Group">ПМІ-11</td>
                            <td>
                                <a class="edit" href="javascript:;"> Редагувати </a>
                            </td>
                            <td>
                                <a class="delete" href="javascript:;"> Видалити </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

